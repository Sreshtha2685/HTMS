<script>

    $(document).ready(function () {

        $("#dropdown").kendoDropDownList({
            optionLabel: "Select",
            dataTextField: "text",
            dataValueField: "value",
            dataSource: [
                { text: "A", value: 1 },
                { text: "B", value: 2 },
                { text: "C", value: 3 },
                { text: "D", value: 4 },
